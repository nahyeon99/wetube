mixin videoPlayer(video = {})
    .videoPlayer
        video(src=`/${video.src}`, autoplay)
        .videoPlayer__controls
            .videoPlayer__columns
                span
                    i.fas.fa-volume-up
                span
                    |   00:00 / 10:00
            .videoPlayer__columns
                span
                    i.fa.fa-play
            .videoPlayer__columns
                span
                    i.fas.fa-expand